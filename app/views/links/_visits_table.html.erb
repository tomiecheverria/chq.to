<!-- app/views/links/_visits_table.html.erb -->
<% if @link_visits.any? %>
  <h2 class="mt-4 text-primary">Visits</h2>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th>ID</th>
          <th>Accessed At</th>
          <th>IP Address</th>
        </tr>
      </thead>
      <tbody>
        <% daily_visits_count = @link.daily_visits_count %>
        <% daily_visits_count.each do |date, count| %>
          <tr>
            <td colspan="3" class="bg-info text-white">
              <strong><%= date %></strong>
              (<%= count %> visitas)
            </td>
          </tr>
          <% @link_visits.select { |visit| visit.accessed_at.to_date == date }.each do |visit| %>
            <tr>
              <td><%= visit.id %></td>
              <td><%= visit.accessed_at %></td>
              <td><%= visit.ip_address %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

  <p class="mt-4"><strong>Total Visits:</strong> <%= @link.visits.count %></p>

  <%= will_paginate @link_visits, param_name: 'visit_page', class: 'pagination' %>
<% else %>
  <p class="mt-4">No visits available for this link.</p>
<% end %>
