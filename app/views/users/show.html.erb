<div class="container mt-4">
  <h1 class="mb-4">User Profile</h1>

  <div class="card">
    <div class="card-body">
      <p class="card-text">Username: <%= @user.username %></p>
      <p class="card-text">Email: <%= @user.email %></p>
      <!-- Otros detalles del usuario que quieras mostrar -->
    </div>
  </div>

  <%= link_to ' Edit profile', edit_user_registration_path, class: 'btn btn-primary mt-3' %>

  <h2 class="mt-4">Links</h2>
  <%= link_to 'Create new link', new_link_path, class: 'btn btn-primary' %>
  <h2 class="mt-4">List of my links</h2>
  <%= render 'links/index' %>

  <% if flash[:notice] %>
    <p id="notice" class="mt-3 alert alert-success"><%= flash[:notice] %></p>
  <% end %>
</div>
